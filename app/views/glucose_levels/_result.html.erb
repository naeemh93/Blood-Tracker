<% if @readings.size > 0 %>
  <table class="table table-striped">
    <thead>
    <tr>
      <th colspan="3" class="page-header">
        <h2>My Readings</h2>
      </th>
    </tr>
    <tr>
      <th>Max Value</th>
      <th>Min Value</th>
      <th>Average</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td>
        <%=  @max_readings %>
      </td>
      <td>
        <%=  @min_readings %>
      </td>
      <td>
        <%= @average_readings.to_i %>
      </td>
    </tr>
    </tbody>
    <table>
<% else %>
  <div class="row col-lg-12">
    <p class="lead">
      You don't have any Readings in the given range!
    </p>
  </div>
<% end %>
